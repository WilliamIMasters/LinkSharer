<body>
   <head>
      <title> <%= title %> </title>
      <!-- Meta Tags -->
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <!-- CSS -->
      <link rel="stylesheet" href="../css/bootstrap.css">
      <link rel="stylesheet" href="../css/custom.css">
      <link rel="stylesheet" href="../css/style.css">
      <link rel="stylesheet" href="../font/css/open-iconic-bootstrap.css">
   </head>
   <body>

      <!-- NavBar -->
      <header>
         <div class="jumbotron mb-0">
            <h1 class="display-4">Alert!</h1>
         </div>

         <nav class="navbar navbar-expand-sm navbar-dark bg-dark" data-toggle="sticky-onscroll">
            <div class="container">
               <a class="navbar-brand mr-3" href="/">Linker</a>
               <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#myNavbar" aria-controls="myNavbar" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
               </button>

               <div class="collapse navbar-collapse" id="myNavbar">
                  <ul class="navbar-nav mr-auto">
                     <li class="nav-item mr-3">
                        <a class="nav-link" href="/">Home</a>
                     </li>
                     <li class="nav-item mr-3">
                        <a class="nav-link" href="/upload">Upload</a>
                     </li>
                     <li class="nav-item mr-3">
                        <a class="nav-link" href="/random">random</a>
                     </li>
                     <li class="nav-item mr-3">
                        <a class="nav-link" href="/search">Search</a>
                     </li>
                  </ul>
                  <ul class="navbar-nav">
                     <li class="nav-item dropdown">
                        <% if(loginData.loggedIn) { %>
                           <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown"><%= loginData.username %></a>
                           <div class="dropdown-menu" aria-labelledby="dropdown">
                              <a class="dropdown-item" href="/user/<%= loginData.username %>">My Account</a>
                              <a class="dropdown-item" href="/logout">logout</a>
                           </div>
                        <% } else{ %>
                           <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Account</a>
                           <div class="dropdown-menu" aria-labelledby="dropdown">
                              <a class="dropdown-item" href="/login">login</a>
                              <a class="dropdown-item" href="/register">register</a>
                           </div>
                        <% } %>


                     </li>
                  </ul>
               </div>
            </div>
         </nav>
      </header>

      <main>
         <div id="page" class="container bg-light py-4">
            <h1><%= title %></h1>
            <h5 class="text-muted">-<a class="text-muted" href="../user/<%= username %>"><%= displayName %></a></h5>
            <p><%= desc %></p>

            <div class="w-100 d-block">
               <% if(link.substring(link.length -4).toLowerCase() == ".png" || link.substring(link.length -4).toLowerCase() == ".jpg" || link.substring(link.length -5).toLowerCase() == ".jpeg" || link.substring(link.length -4).toLowerCase() == ".gif"){ %>
                  <img class="mw-100 d-inline-block" src="<%= link %>"></img>
               <% } else if(link.substring(link.length -4).toLowerCase() == ".mp4" || link.substring(link.length -5).toLowerCase() == ".webm"){ %>
                  <video class="w-100 d-inline-block" src="<%= link %>" controls loop></video>
               <% } else{ %>
                  <a href="<%= link %>"><%= link %></a>
               <% } %>

            </div>


         </div>
      </main>

      <!-- Footer -->
      <footer class="text-light container-fluid bg-dark">
         <div class="container py-2">
            text
         </div>
      </footer>

      <!-- jQuery first, then Popper.js, then Bootstrap JS -->
      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
      <!-- Custom Javascript -->
   </body>
</body>
